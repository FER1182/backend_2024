<div class="container">
    <h1 class="mt-5">Lista de Usuarios</h1>
    <table class="table table-striped mt-3">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Correo</th>
          <th>Tipo de Cuenta</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
        <tr>
          <td>{{first_name}} {{last_name}}</td>
          <td>{{email}}</td>
          <td>{{role}}</td>
            <td>
            <button class="btn btn-primary" onclick="cambiarRol('{{_id}}')">Cambiar Rol</button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>