<div class="container my-5">
    <h1 class="text-center">Carrito de Compras</h1>
    <ul class="list-group">
        {{#each cart}}
        <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
                <h5 class="fw-bold">{{this.carts.product.title}}</h5>
                <p class="mb-1">Precio: ${{this.carts.product.price}}</p>
                <p class="mb-0">Cantidad: {{this.carts.quantity}}</p>
                 <p class="mb-0 fw-bold">Subtotal: ${{this.subtotal}}</p>
            </div>
            <form class="delete-form mt-2" data-action="/api/carts/{{@root.cartId}}/product/{{this.carts._id}}">
                <button type="submit" class="btn btn-success">Eliminar del carrito</button>
            </form>
        </li>
        {{/each}}
    </ul>
    <div class="mt-4">
        <h3 class="text-end">Total: ${{totalCart}}</h3>
    </div>
    <div class="d-flex justify-content-between mt-4">
        <a href="/api/products" class="btn btn-secondary">Seguir comprando</a>
        <form action="/api/carts/{{cartId}}/purchase" method="post">
            <button type="submit" class="btn btn-success">Finalizar compra</button>
        </form>
    </div>
</div>
